@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-3">Calculadora</h1>

    <form method="post">

        <!--criar o efeito de 'memória' no HTTP-->
        <input type="hidden" value="@ViewBag.PrimeiroOperador" name="primeiroOperador" />
        <input type="hidden" value="@ViewBag.PrimeiroOperando" name="primeiroOperando" />
        <input type="hidden" value="@ViewBag.Operador" name="operador" />
        <input type="hidden" value="@ViewBag.LimpaVisor" name="limpaVisor" />

        <table class="table-dark" style="margin-left: auto; margin-right:auto">
            <tr>
                <td colspan="4">
                    <input type="text" readonly="readonly" value="@ViewBag.Visor" name="visor" contenteditable="false" class="text-right" />
                </td>
            </tr>
            <tr>
                <td colspan="2" style="border:1px solid white">
                    <input type="submit" value="C" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="+/-" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="/" name="botao" class="btn text-center text-light" />
                </td>
            </tr>

            <tr>
                <td style="border:1px solid white">
                    <input type="submit" value="7" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="8" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="9" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="x" name="botao" class="btn text-center text-light" />
                </td>
            </tr>
            <tr>
                <td style="border:1px solid white">
                    <input type="submit" value="4" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="5" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="6" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="-" name="botao" class="btn text-center text-light" />
                </td>
            </tr>
            <tr>
                <td style="border:1px solid white">
                    <input type="submit" value="1" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="2" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="3" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="+" name="botao" class="btn text-center text-light" />
                </td>
            </tr>
            <tr>
                <td colspan="2" style="border:1px solid white">
                    <input type="submit" value="0" name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="," name="botao" class="btn text-center text-light" />
                </td>
                <td style="border:1px solid white">
                    <input type="submit" value="=" name="botao" class="btn text-center text-light" />
                </td>
            </tr>
        </table>
    </form>
</div>